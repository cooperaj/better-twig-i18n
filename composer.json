{
  "name": "cooperaj/better-twig-i18n",
  "description": "Provides i18n functionality based on gettext language files.",
  "minimum-stability": "stable",
  "license": "mit",
  "authors": [
    {
      "name": "Adam Cooper",
      "email": "adam@acpr.dev"
    }
  ],
  "require": {
    "ext-gettext": "*",
    "twig/twig": "^v3.0",
    "symfony/finder": "^4.0 || ^5.0",
    "gettext/gettext": "^v5.5",
    "gettext/translator": "^v1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "mikey179/vfsstream": "^v1.6",
    "squizlabs/php_codesniffer": "^3.5",
    "vimeo/psalm": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Acpr\\I18n\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AcprUnit\\I18n\\": "tests/unit/",
      "AcprIntegration\\I18n\\": "tests/integration/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "static": "vendor/bin/psalm"
  }
}